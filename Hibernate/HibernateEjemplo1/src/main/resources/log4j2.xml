<?xml version="1.0" encoding="UTF-8"?>
<configuration status="INFO"> 
    <Appenders>
        <!--Hay diferentes tipos de apender podemos tener envios de datos por mail
        una base de datos, mostrar en consola etc, vamos a usar la consola para mostrar 
        enviar la informacion-->
        <!--Agregamos una consola y el target seria por donde va a salir la informacion-->
        <Console name="Console" target="SYSTEM_OUT">
            
            <!--La informacion sobre patrones se la puede encontrar en la documentacion de 
            log4j un ejemplo de patron visto en clase es--> 
            <PatternLayout pattern = "%d{HH,mm,ss} [%t] %-5level %logger{36} - %msg%n"> </PatternLayout>
        </Console>
    </Appenders>
    <!--additivity nos dice que no se va a duplicar la informacion que se vaya generando-->
    <Loggers>
        <Logger name="org.hibernate.SQL" level="debug" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="trace" additivity = "false">
            <AppenderRef ref="Console"/>
        </Logger>
       
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</configuration>